    <script>
        // Script para valida√ß√£o de dom√≠nio de e-mail
        document.querySelector('.simple-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const emailInput = this.querySelector('input[name="email"]');
            const errorMessage = document.getElementById('errorMessage');
            const submitBtn = this.querySelector('.activate-btn');
            const email = emailInput.value.trim();
            
            // Reset estados anteriores
            emailInput.classList.remove('error');
            errorMessage.style.display = 'none';
            submitBtn.disabled = false;
            
            // Validar dom√≠nio do e-mail
            const allowedDomain = '@empresa.com.br';
            if (!email.endsWith(allowedDomain)) {
                // Mostrar erro
                emailInput.classList.add('error');
                errorMessage.style.display = 'block';
                
                // Efeito visual de erro
                emailInput.focus();
                return;
            }
            
            // Simula√ß√£o de processamento (dom√≠nio correto)
            const originalText = submitBtn.textContent;
            submitBtn.textContent = '‚è≥ Ativando...';
            submitBtn.disabled = true;
            
            setTimeout(() => {
                // Simula√ß√£o de sucesso
                alert(`üéâ Cupom ativado com sucesso!\n\nUm e-mail com o c√≥digo do cupom foi enviado para:\n${email}\n\nAproveite seu presente de R$ 50,00 no iFood!`);
                
                // Reset do formul√°rio
                this.reset();
                submitBtn.textContent = originalText;
                submitBtn.disabled = false;
                errorMessage.style.display = 'none';
                emailInput.classList.remove('error');
            }, 2000);
        });

        // Valida√ß√£o em tempo real enquanto o usu√°rio digita
        document.querySelector('input[name="email"]').addEventListener('input', function() {
            const errorMessage = document.getElementById('errorMessage');
            const email = this.value.trim();
            
            if (email && !email.endsWith('@empresa.com.br')) {
                this.classList.add('error');
                errorMessage.style.display = 'block';
            } else {
                this.classList.remove('error');
                errorMessage.style.display = 'none';
            }
        });
    </script>

